{ 
    "spacing": 1,
    "margin-left": 6,
    "margin-right": 6,
    "layer": "top",
    "height": 30, // Waybar height (to be removed for auto height)
    // Choose the order of the modules
    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "sway/scratchpad",
        "cpu",
        "memory",
        "temperature",
        "backlight",
        "battery",
        "privacy"

    ],
    "modules-center": [
        "custom/media"
    ],
    "modules-right": [
        "custom/apt",
        "systemd-failed-units",
        "idle_inhibitor",
        "pulseaudio",
        "network",
        "clock",
        "bluetooth",
        "tray"
    ],
    // Modules configuration
    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": false,
        "warp-on-scroll": false
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£ ",
            "unlocked": "ÔÇú "
        }
    },
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", "Ôãí"],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ ",
            "deactivated": "ÔÅ∞ "
        }
    },
    "tray": {
        "icon-size": 18,
        "spacing": 5
    },
    "clock": {
        "format": "{:%H:%M}",
        "format-alt": "{:%A, %B %d, %Y (%R)}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode"          : "year",
            "mode-mon-col"  : 3,
            "weeks-pos"     : "right",
            "on-scroll"     : 1,
            "format": {
                "months":     "<span color='#ffead3'><b>{}</b></span>",
                "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions":  {
            "on-click-right": "mode",
            "on-scroll-up": "tz_up",
            "on-scroll-down": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": true
    },
    "memory": {
        "format": "{}% ÔÉâ"
    },
    "temperature": {
        // "thermal-zone": 2,
        "hwmon-path": "/sys/class/hwmon/hwmon4/temp1_input",
        "critical-threshold": 80,
        "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôãã", "Ôãâ", "Ôãá"]
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% Û∞¢ù",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "network": {
        "format-wifi": "{essid} Ôá´ ",
        "format-ethernet": "{ipaddr} Û∞àÄ ",
        "tooltip-format": "{ifname} via {gwaddr} Û∞àÅ",
        "format-linked": "{ifname} (No IP) Û∞àÇ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî",
        "format-bluetooth-muted": "Ôë¶ {icon}Ôäî",
        "format-muted": "Ôë¶ ",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ± ",
        "format-icons": {
            "headphone": "ÔÄ• ",
            "hands-free": "Ôâñ ",
            "headset": "Û∞ãé ",
            "phone": "ÔÇï ",
            "portable": "ÔÇï ",
            "car": "ÔÜπ ",
            "default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "]
        },
        "on-click": "pavucontrol"
    },
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
    },
    "custom/apt": {
        "exec": "$HOME/.config/scripts/apt_upgrades -N -s ''", // Script in resources folder
	    "restart-interval": 60
    },
    "privacy": {
        "icon-spacing": 4,
        "icon-size": 18,
        "transition-duration": 250,
        "modules": [
            {
                "type": "screenshare",
                "tooltip": true,
                "tooltip-icon-size": 24
            },
            {
                "type": "audio-out",
                "tooltip": true,
                "tooltip-icon-size": 24
            },
            {
                "type": "audio-in",
                "tooltip": true,
                "tooltip-icon-size": 24
            }
        ]
    },
    "systemd-failed-units": {
        "hide-on-ok": true, // Do not hide if there is zero failed units.
        "format": "‚úó {nr_failed} Unit Failed",
        "format-ok": "‚úì",
        "system": true, // Monitor failed systemwide units.
        "user": true // Ignore failed user units.
    }
}
